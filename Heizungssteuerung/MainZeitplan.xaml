<Window x:Class="Heizungssteuerung.MainZeitplan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Heizungssteuerung.UIElemente"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:h="clr-namespace:Heizungssteuerung"
        Title="Zeitplanübersicht" Height="700" Width="500" x:Name="_this" Background="White" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="25" VerticalAlignment="Top" Orientation="Horizontal" Background="GhostWhite">
            <Button Height="25" Width="30" HorizontalAlignment="Left" PreviewMouseDown="Zurück_MouseDown" Background="Transparent" BorderThickness="0">
                <Image Source="pack://application:,,,/Icons/Zurueck_Icon.gif"/>
            </Button>
            <Button Height="25" Width="30" HorizontalAlignment="Right" PreviewMouseDown="Neu_MouseDown" Margin="425,0,0,0" Background="Transparent" BorderThickness="0">
                <Image Source="pack://application:,,,/Icons/Neu_Icon.gif"/>
            </Button>
        </StackPanel>
        <StackPanel x:Name="ZeitplanPanel" Margin="0,25,0,0" Orientation="Vertical">
        
        </StackPanel>
    </Grid>
  
</Window>
