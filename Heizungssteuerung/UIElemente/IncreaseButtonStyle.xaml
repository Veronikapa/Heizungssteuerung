<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Image}" x:Key="IncreaseButton">
        <Setter Property="Source" Value="pack://application:,,,/Icons/Increase_Schwarz_Icon.gif" />
        <Style.Triggers>
            <Trigger Property="Button.IsEnabled" Value="False">
                <Setter Property="Source" Value="pack://application:,,,/Icons/Increase_Grau_Icon.gif" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
